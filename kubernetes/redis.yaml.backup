apiVersion: v1
kind: Service
metadata:
  name: redis
  labels:
    app: symfony
spec:
  ports:
    - port: 6379
      targetPort: 6379
  selector:
    app: symfony
    tier: backend
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: redis-claim
  labels:
    app: symfony
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 10Gi
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: redis
  labels:
    app: symfony
spec:
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: symfony
        tier: backend
    spec:
      containers:
        - image: redis:3-alpine
          name: redis
          ports:
            - containerPort: 6379
              name: redis
          volumeMounts:
            - name: redis-persistent-storage
              mountPath: /var/lib/redis:rw
      volumes:
        - name: redis-persistent-storage
          persistentVolumeClaim:
            claimName: redis-claim
