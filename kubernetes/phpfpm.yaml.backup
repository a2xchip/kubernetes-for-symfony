apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: php-deployment
spec:
  replicas: 1
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: phpfpm
    spec:
      restartPolicy: Always
      containers:
      - name: phpfpm
        image: php:7.0-fpm
        resources: {}
        volumeMounts:
        - mountPath: /var/www/symfony
          name: symfony
        - mountPath: /var/www/symfony/var/logs
          name: symfony-logs
      volumes:
      - name: symfony
        persistentVolumeClaim:
          claimName: symfony
      - name: symfony-logs
        persistentVolumeClaim:
          claimName: symfony-logs
status: {}

